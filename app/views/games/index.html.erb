
<h1>Games</h1>
<% if @queued_games.present? %>
<h3>Queued Games</h3>
<table class="bordered striped responsive-table">
  <thead>
    <tr>
      <th>Date/Time</th>
      <th>Player 1</th>
      <th>Player 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @queued_games.each do |game| %>
      <tr>
        <td><%= game.updated_at.strftime('%m/%d/%Y - %l:%M %p') %></td>
        <td><%= game.players.first.name if game.players.present? %></td>
        <td><%= game.players.last.name if game.players.present? %></td>
        <td><%= link_to 'Update Score', game %></td>
        <td><%= link_to 'Edit Players', edit_game_path(game) %></td>
        <td><%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<h3>Completed Games</h3>

<table class="bordered striped responsive-table">
  <thead>
    <tr>
      <th>Winner</th>
      <th>Loser</th>
      <th>Spread</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @played_games.each do |game| %>
      <tr>
        <td><%= game.winner %></td>
        <td><%= game.loser if game.players.present? %></td>
        <td><%= game.spread %></td>
        <td><%= link_to 'View', game, class:"btn green" %></td>
        <td><%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <div class="col s12 m6 l6">
  <%= link_to 'New Game', new_game_path, class:"btn" %>

  </div>
</div>
<br>
