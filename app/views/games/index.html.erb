
<h1>Games</h1>
<% if @queued_games.present? %>
<h3>Queued Games</h3>
  <div class="row">
  <% @queued_games.each do |game| %>
    <div class="col s12 m4">
      <div class="card darken-1">
        <div class="card-content">
          <span class="card-title"><%= game.players.first.name if game.players.present? %> <br />Vs. <br /><%= game.players.last.name if game.players.present? %></span>
          <p><%= game.updated_at.strftime('%m/%d/%Y - %l:%M %p') %></p>
        </div>
        <div class="card-action">
          <%= link_to 'Update Score', game %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>

<h3>Completed Games</h3>

  <div class="row">
  <% @played_games.each do |game| %>
    <div class="col s12 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= game.winner %> - <%= game.winning_score %> <br /> <%= game.loser %> - <%= game.losing_score %></span>
          <p><%= game.updated_at.strftime('%m/%d/%Y - %l:%M %p') %></p>
        </div>
        <div class="card-action">
          <%= link_to 'More', game %>
        </div>
      </div>
    </div>
    <% end %>
  </div>

<br>
<div class="row">
  <div class="col s12 m6 l6">
  <%= link_to 'New Game', new_game_path, class:"btn" %>

  </div>
</div>
<br>
